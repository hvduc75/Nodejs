<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Delete A User</title>
        <link rel="stylesheet" href="/css/style.css" />
    </head>
    <body>
        <div class="topnav">
            <a href="/">Home</a>
            <a href="/create-user">Create Users</a>
        </div>
        <div class="form-add-new">
            <form action="/delete-user" method="POST">
                <Fieldset>
                    <legend>Delete A User</legend>
                    <div class="input-group d-none">
                        <label>Id: </label>
                        <input type="text" value="<%= userEdit.id%>" name="userId"/>
                    </div>
                    <div class="input-group">
                        <label>Are you sure to delete this user with email </label>
                        <input type="text" value="<%= userEdit.email%>" name="email"/>
                    </div>
                    <div>
                        <button>Confirm</button>
                    </div>
                </Fieldset>
            </form>
        </div>
    </body>
</html>
